<div class="col-md-12 text-center">
	<br />
	<br />
    <% @participants.each do |participant| %>
        <div class="col-md-3 col-sm-4 col-xs-4">
            <%= link_to edition_participant_path(@edition, participant).sub(/\d+\z/, participant.username) do %>
                <div class="user-logo" style="background-image:url(<%= participant.avatar.url %>)">
                </div>
            <% end %>
            <div class="user-name">
                <h5><%= link_to participant.full_name, edition_participant_path(@edition, participant).sub(/\d+\z/, participant.username) %></h5>
            </div>
        </div>
    <% end %>
</div>
